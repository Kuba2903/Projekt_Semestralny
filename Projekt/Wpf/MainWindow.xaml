        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFBD3737">
        <Button Content="HOME" x:Name="but0" HorizontalAlignment="Left" Margin="0,-1,0,0" VerticalAlignment="Top" Height="25" Width="130" Background="#FFF6F6F6" Click="Button_Click"/>
        <Button Content="RENTALS" HorizontalAlignment="Left" Margin="670,-1,0,0" VerticalAlignment="Top" Height="25" Width="130"/>
        <Button Content="READERS" HorizontalAlignment="Left" Margin="495,-1,0,0" VerticalAlignment="Top" Height="25" Width="130"/>
        <Button Content="BOOKS" HorizontalAlignment="Center" Margin="0,-1,0,0" VerticalAlignment="Top" Height="25" Width="130"/>
        <Button Content="AUTHORS" HorizontalAlignment="Left" Margin="170,-1,0,0" VerticalAlignment="Top" Height="25" Width="130" Click="Button_Click_1"/>
        <Frame x:Name="frame" Height="NaN" Margin="0,59,0,0" Width="NaN"/>
        <Label x:Name="label" Content="Pick the database table you want to edit" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" Height="45" Width="420" FontSize="22"/>
    </Grid>
</Window>
